<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:waveview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.yueworld.baseproject.ui.myCourse.activity.UnitStudyActivity">


    <com.yueworld.baseproject.view.customRecyclerview.SpeedRecyclerView
        android:id="@+id/srv_unit_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </com.yueworld.baseproject.view.customRecyclerview.SpeedRecyclerView>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <View
            style="@style/line_view"
            android:layout_centerInParent="true" />
        <com.shuyu.waveview.AudioWaveView
            android:id="@+id/audioWave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            waveview:waveColor="@color/colorToolbar" />
        <com.shuyu.waveview.AudioWaveView
            android:id="@+id/playWave"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            waveview:waveColor="@color/colorToolbar" />

    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_left_play"
            android:src="@mipmap/icon_green_leftbutton"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/iv_recording"
            android:layout_marginLeft="40dp"
            android:src="@mipmap/icon_sound_recording"
            android:layout_width="55dp"
            android:layout_height="55dp" />
        <ImageView
            android:id="@+id/iv_right_play"
            android:src="@mipmap/icon_gray_rightbutton"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <TextView
        android:text="2/12"
        android:gravity="center"
        android:textColor="@color/colorGrayDD"
        android:textSize="@dimen/txt_size_13"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</LinearLayout>
