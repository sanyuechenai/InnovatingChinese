<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yueworld.baseproject.ui.home.activity.HomeActivity">

    <com.yueworld.baseproject.view.NoScrollViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </com.yueworld.baseproject.view.NoScrollViewPager>
    <com.chaychan.library.BottomBarLayout
        android:id="@+id/home_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/colorBottomBg"
        >

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/icon_minenormal_home"
            app:iconSelected="@mipmap/icon_mineselected_home"
            app:itemText=""
            app:textColorNormal="@color/white"
            app:textColorSelected="@color/white"
            app:iconWidth="30dp"
            app:iconHeight="30dp"
            app:itemTextSize="8sp"
            app:itemMarginTop="-5dp"
            app:openTouchBg="true"
            app:touchDrawable="@drawable/selector_bottom_bg"
            />
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/icon_allnormal_home"
            app:iconSelected="@mipmap/icon_allselected_home"
            app:itemText=""
            app:textColorNormal="@color/white"
            app:textColorSelected="@color/white"
            app:iconWidth="30dp"
            app:iconHeight="30dp"
            app:itemTextSize="8sp"
            app:itemMarginTop="-5dp"
            app:openTouchBg="true"
            app:touchDrawable="@drawable/selector_bottom_bg"
            />
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/icon_settingnormal_home"
            app:iconSelected="@mipmap/icon_settingselected_home"
            app:itemText=""
            app:textColorNormal="@color/white"
            app:textColorSelected="@color/white"
            app:iconWidth="30dp"
            app:iconHeight="30dp"
            app:itemTextSize="8sp"
            app:itemMarginTop="-5dp"
            app:openTouchBg="true"
            app:touchDrawable="@drawable/selector_bottom_bg"
            />
    </com.chaychan.library.BottomBarLayout>

</LinearLayout>
